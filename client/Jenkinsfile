pipeline {
    agent {
      docker {
        image 'node:11-slim'
        args '-v $home\\AppLecturaPrueba'
      }
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'development', credentialsId: 'jenk', url: 'git@github.com:LinoHallerRios/AppLecturas.git'
            }
        }
        stage('Install'){
          steps {
            parallel 'Client Install': {
              script {
                sh 'cd client && npm install'
              }
            }
          }
        }
        stage('Build'){
          steps {
            parallel 'Client Build': {
              script {
                sh 'cd client && npm build'
              }
            }
          }
        }
        stage('Sonar Gate') {
          agent { docker { image 'sonarqube:latest' } }
          steps{
            script {
              sh 'docker run -d --name sonarqube -p 9000:9000 sonarqube'
              timeout(time: 30 , unit: 'MINUTES'){
                def qg = waitForQualityGate()
                if (qg.status != 'OK') {
                  error "Pipeline abortado por no pasar quality gates: ${qg.status}"
                }
              }
            }
          }
        }
        stage('IBMCloud Deploy') {
          steps {
            script {
              sh 'echo Realizando deploy en Ibmcloud...'
            }
          }
        }
    }
}
