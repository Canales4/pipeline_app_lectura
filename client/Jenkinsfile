pipeline {
    agent any
    tools {
        nodejs 'node-11.10.0'
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'development', credentialsId: 'jenk', url: 'git@github.com:LinoHallerRios/AppLecturas.git'
            }
        }
        stage('Install'){
          steps {
            parallel 'Server Install': {
              script {
                sh 'cd server && npm install'
              }
            }, 'Client Install': {
              sh 'cd client && npm install'
            }
          }
        }
        stage('Build'){
          steps {
            parallel 'Dump .sql': {
              sh 'cd /c/xampp/mysql/bin && ./mysqldump --user=root --databases app_lecturas >
              /c/Users/6001290/Desktop/jobs/AppLecturas/app_lecturas.sql && cd /c/Users/6001290/Desktop/jobs/AppLecturas &&
              git add . && git commit -m "Actualizando BD (.sql)" && git push'
            }, 'Server Build': {
              script {
                sh 'echo hi'
              }
            }, 'Client Build': {
              sh 'cd client && npm run build'
              //sh 'cd client && npm start'
            }
          }
        }
        stage('Test'){
          steps {
            script {
              sh 'cd client && npm test'
            }
          }
        }
        stage('Sonar Gate') {
          steps{
            script {
              withSonarQubeEnv('sonar-6') {
                sh 'cd ../.. && cd tools/hudson.plugins.sonar.SonarRunnerInstallation/sonar33/bin && ./sonar-scanner'
              }
              def qg = waitForQualityGate()
              if (qg.status != 'OK') {
                error "Pipeline abortado por no pasar quality gates: ${qg.status}"
              }
            }
          }
        }
        stage('IBMCloud Deploy') {
          steps {
            script {
              sh 'echo Realizando deploy en Ibmcloud...'
            }
          }
        }
    }
}
