pipeline {
    agent any
    tools {
        nodejs 'node-11.10.0'
    }
    stages {
        stage('SCM Checkout') {
            steps {
                //git branch: 'development', credentialsId: 'jenk', url: 'git@github.com:LinoHallerRios/AppLecturas.git'
                git credentialsId: '2300a187-0677-48f8-9d73-384d61ae2172', url: 'https://github.com/Canales4/pipeline_app_lectura.git'
            }
        }
        stage('Install'){
          steps {
            parallel 'Server Install': {
              script {
                sh 'cd server && npm install'
              }
            }, 'Client Install': {
              sh 'cd client && npm install'
            }
          }
        }
        stage('Build'){
          steps {
            parallel 'Client Build': {
              sh 'cd client && npm run build && npm start'
            }, 'Dump .sql': {
              sh 'cd /c/xampp/mysql/bin && ./mysqldump --user=root --host=172.16.217.40 --protocol=tcp --port=3306 --default-character-set=utf8 "app_lecturas" > /c/backup_mysqldb/app_lecturas.sql'
            }
          }
        }
        stage('Start') {
          steps {
            parallel /*'Start client': {
              sh 'cd client && npm start'
            }, */'Start Server': {
              sh 'cd server && npm run dev'
            }
          }
        }
        stage('Sonar Gate') {
          steps{
            script {
              withSonarQubeEnv('sonar-6') {
                sh 'cd ../.. && cd tools/hudson.plugins.sonar.SonarRunnerInstallation/sonar33/bin && ./sonar-scanner'
              }
              def qg = waitForQualityGate()
              if (qg.status != 'OK') {
                error "Pipeline abortado por no pasar quality gates: ${qg.status}"
              }
            }
          }
        }
        stage('IBMCloud Deploy') {
          steps {
            script {
              sh 'echo En proceso... '
            }
          }
        }
    }
}
